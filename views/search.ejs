<!DOCTYPE html>
<html ng-app="Napstr">
<head>
  <meta charset="UTF-8">
  <title>napstr</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/main.css">
  <script src = "/bower_components/jquery/dist/jquery.js"></script>
  <script src="/bower_components/angular/angular.js"></script>
  <script src="/js/app.js"></script>
  <script src="/js/main.js"></script>
  <script src="/js/users_controller.js"></script>
</head>
<body>

  <div id="nav-bar">
    <ul>
      <li> <a href="/"> napstr </a> </li>
      <li> | </li>
      <% if (!username) { %>
        <li> <a href="/"> Login </a> </li>
        <li> | </li>
        <li> <a href="/"> Sign Up</a> </li>
      <% } else { %>
        <li> <a href="/search"> Search </a> </li>
        <li> | </li>
        <li> <a href="/logout"> Logout </a> </li>
      <% } %>
    </ul>
  </div> <!-- nav bar -->

  <div id="map"> </div>

  <script async defer src='https://maps.googleapis.com/maps/api/js?key=<%= napstrKey %>&callback=initMap'></script>


  
  <div ng-controller="UsersController as napstrs">
    <h3> Welcome <%= username %> </h3>
    <p> Search: <input ng-model="filterPref"></p>
    <p> Filter:
    <select ng-model="filterPref">
      <option value="Big Spoon"> Big Spoon </option>
      <option value="Little Spoon"> Little Spoon </option>
      <option value="Side by Side"> Side by Side </option>
    </select> </p>
    <br>
    
    <form>
      <input type="range" name="distance" min="0" max="1000" value="10" onchange="showValue(this.value)">
    </form>
    <span id="range">10 miles </span>
    <script type="text/javascript">
      function showValue(newValue) {
        document.getElementById('range').innerHTML=(newValue + ' miles');
      }
    </script>


    <h2> napstrs near you:</h2>
    <div ng-repeat="napstr in napstrs.all | filter:filterPref">
      <p> <strong> {{napstr.username}} </strong>
        <br> <em>{{napstr.aboutMe}}</em>
        <br> Rating: {{napstr.rating}}
        <br> <a href="/profiles/{{napstr._id}}">Book Nap</a>
      </p>
    </div> <!--repeat -->
  
  </div> <!--controller -->


</body>
</html>